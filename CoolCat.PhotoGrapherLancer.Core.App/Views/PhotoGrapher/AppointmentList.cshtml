@model IEnumerable<CoolCat.PhotoGrapherLancer.Core.Entities.PublicProfilePhotoGrapher.PhotoGrapherBooking>

@{
    ViewBag.Title = "AppointmentList";
    Layout = "~/Views/Shared/_Layout_PhotoGrapherPage.cshtml";

    int sr = 0;
}





<section class="content-header">
    <h1>
        Appointment
        <small>List</small>
    </h1>

</section>

<!-- Main content -->
<section class="content container-fluid">

    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <form>
                    <div class="box-header">
                        <h3 class="box-title">Responsive Hover Table</h3>


                        <div class="box-tools">
                            <div class="input-group input-group-sm" style="width: 150px;">
                                <input type="text" name="table_search" class="form-control pull-right" placeholder="Search">

                                <div class="input-group-btn">
                                    <button type="submit" class="btn btn-danger"><i class="fa fa-search"></i></button>
                                </div>
                            </div>
                        </div>

                    </div>
                </form>
                <!-- /.box-header -->
                <div class="box-body table-responsive no-padding">
                    <table class="table table-hover">
                        <tr>
                            <th>Sr</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>

                            <th>Date</th>
                            <th>Day</th>
                            <th>Time</th>
                            <th>Program</th>
                            <th>Client</th>

                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @(sr=sr+1)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Phone)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PreferedDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PreferedDay)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PreferedTime)
                                </td>
                                <td>
                                <span class="label label-success">@Html.DisplayFor(modelItem => item.AppointmentFor)</span>
                                </td>

                                <td>
                                   
                                    <a href="/PhotoGrapher/ClientDetails/@Html.DisplayFor(modelItem => item.Fk_Client_Id)">Details</a></td>

                               
                            </tr>
                             
                        }


                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
    </div>


</section>

