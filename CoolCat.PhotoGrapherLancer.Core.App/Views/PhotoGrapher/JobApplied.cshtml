@model IEnumerable<CoolCat.PhotoGrapherLancer.Core.Service.ServiceViewModel.AppliedPostViewModel>

@{
    ViewBag.Title = "Jobs Applied";
    Layout = "~/Views/Shared/_Layout_PhotoGrapherPage.cshtml";

}

@section CSS{

    <style type="text/css">
        .toppad {
            margin-top: 20px;
        }
    </style>

}


<section class="content-header">
    <h1>
        PhotoGrapher
        <small>Applied Jobs</small>
    </h1>

</section>


<section class="content container-fluid">


    <div class="row">

        <div class="col-md-3 toppad">

            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Filter The Post Catagory</h3>

                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                        <!-- <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button> -->
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <ul class="products-list product-list-in-box">
                        <li class="item">
                            <div class="product-img">
                                <img src="~/Content/Component/dist/img/default-50x50.gif" alt="Product Image">
                            </div>
                            <div class="product-info">
                                <a href="javascript:void(0)" class="product-title">
                                    Event
                                    <span class="label label-warning pull-right">Filter</span>
                                </a>
                                <span class="product-description">
                                    PhotoGraphy
                                </span>
                            </div>
                        </li>
                        <!-- /.item -->
                        <li class="item">
                            <div class="product-img">
                                <img src="~/Content/Component/dist/img/default-50x50.gif" alt="Product Image">
                            </div>
                            <div class="product-info">
                                <a href="javascript:void(0)" class="product-title">
                                    Weeding
                                    <span class="label label-info pull-right">Filter</span>
                                </a>
                                <span class="product-description">
                                    PhotoGraphy
                                </span>
                            </div>
                        </li>

                        <!-- /.item -->
                        <li class="item">
                            <div class="product-img">
                                <img src="~/Content/Component/dist/img/default-50x50.gif" alt="Product Image">
                            </div>
                            <div class="product-info">
                                <a href="javascript:void(0)" class="product-title">Party<span class="label label-danger pull-right">Filter</span></a>
                                <span class="product-description">
                                    PhotoGraphy
                                </span>
                            </div>
                        </li>
                        <!-- /.item -->
                        <li class="item">
                            <div class="product-img">
                                <img src="~/Content/Component/dist/img/default-50x50.gif" alt="Product Image">
                            </div>
                            <div class="product-info">
                                <a href="javascript:void(0)" class="product-title">
                                    Convocation
                                    <span class="label label-success pull-right">filter</span>
                                </a>
                                <span class="product-description">
                                    PhotoGraphy
                                </span>
                            </div>
                        </li>
                        <!-- /.item -->
                    </ul>
                </div>
                <!-- /.box-body -->
                <div class="box-footer text-center">

                    <input type="text" name="filter" placeholder="Filter post">
                    <span><button class="btn-primary">Filter</button></span>
                </div>
                <!-- /.box-footer -->
            </div>

        </div>


        <div class="col-md-9">

            @foreach (var item in Model)
            {
                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6  toppad">


                    <div class="panel panel-info">
                        <div class="panel-heading">
                            <p class="panel-title">



                                <a href="/PhotoGrapher/ClientDetails/@item.JobPostList.FkClientID">Client Details</a>

                            </p>
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <!-- <div class="col-md-3 col-lg-3 " align="center">

                                      <img alt="User Pic" src="https://cdn4.iconfinder.com/data/icons/pretty_office_3/256/Accept-Male-User.png" class="img-circle img-responsive">
                                 </div> -->


                                <div class=" col-md-12 col-lg-12 col-xs-6 ">
                                    <table class="table table-user-information">
                                        <tbody>
                                            <tr>
                                                <td>Title</td>
                                                <td>@item.JobPostList.Title</td>
                                            </tr>
                                            <tr>
                                                <td>Hire date:</td>
                                                <td>@item.JobPostList.HireDate</td>
                                            </tr>

                                            <tr>
                                                <td>Hire Time:</td>
                                                <td>@item.JobPostList.HireTime</td>
                                            </tr>


                                            <tr>
                                                <td>Payment</td>
                                                <td>@item.JobPostList.payment</td>
                                            </tr>


                                            <tr>
                                                <td>Description</td>
                                                <td>@item.JobPostList.Description</td>
                                            </tr>

                                            <tr>
                                                <td>Address</td>
                                                <td>@item.JobPostList.Address</td>
                                            </tr>
                                            <tr>
                                                <td>Email</td>
                                                <td><a href="#">@item.JobPostList.Email</a></td>
                                            </tr>
                                            <tr>
                                                <td>Phone</td>
                                                <td>@item.JobPostList.Phone</td>


                                            </tr>

                                        </tbody>
                                    </table>
                                     <a href="#" class="btn btn-info">This Job You Applied</a>


                                </div>
                            </div>
                        </div>


                    </div>
                </div>

            }

        </div>




    </div>



</section>