@model IEnumerable<CoolCat.PhotoGrapherLancer.Core.Entities.Client.ClientJobsPost>

@{
    ViewBag.Title = "Jobs";
    Layout = "~/Views/Shared/_Layout_PhotoGrapherPage.cshtml";
}


<section class="content-header">
    <h1>
        PhotoGrapher
        <small>Job Issue</small>
    </h1>

</section>


<section class="content container-fluid">


    <div class="row">

        <div class="col-md-3 toppad">

            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Filter The Post Catagory</h3>

                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                        <!-- <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button> -->
                    </div>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <ul class="products-list product-list-in-box">
                        <li class="item">
                            <div class="product-img">
                                <img src="~/Content/Component/dist/img/default-50x50.gif" alt="Product Image">
                            </div>
                            <div class="product-info">
                                <a href="javascript:void(0)" class="product-title">
                                    Event
                                    <span class="label label-warning pull-right">Filter</span>
                                </a>
                                <span class="product-description">
                                    PhotoGraphy
                                </span>
                            </div>
                        </li>
                        <!-- /.item -->
                        <li class="item">
                            <div class="product-img">
                                <img src="~/Content/Component/dist/img/default-50x50.gif" alt="Product Image">
                            </div>
                            <div class="product-info">
                                <a href="javascript:void(0)" class="product-title">
                                    Weeding
                                    <span class="label label-info pull-right">Filter</span>
                                </a>
                                <span class="product-description">
                                    PhotoGraphy
                                </span>
                            </div>
                        </li>

                        <!-- /.item -->
                        <li class="item">
                            <div class="product-img">
                                <img src="~/Content/Component/dist/img/default-50x50.gif" alt="Product Image">
                            </div>
                            <div class="product-info">
                                <a href="javascript:void(0)" class="product-title">Party<span class="label label-danger pull-right">Filter</span></a>
                                <span class="product-description">
                                    PhotoGraphy
                                </span>
                            </div>
                        </li>
                        <!-- /.item -->
                        <li class="item">
                            <div class="product-img">
                                <img src="~/Content/Component/dist/img/default-50x50.gif" alt="Product Image">
                            </div>
                            <div class="product-info">
                                <a href="javascript:void(0)" class="product-title">
                                    Convocation
                                    <span class="label label-success pull-right">filter</span>
                                </a>
                                <span class="product-description">
                                    PhotoGraphy
                                </span>
                            </div>
                        </li>
                        <!-- /.item -->
                    </ul>
                </div>
                <!-- /.box-body -->
                <div class="box-footer text-center">

                    <input type="text" name="filter" placeholder="Filter post">
                    <span><button class="btn-primary">Filter</button></span>
                </div>
                <!-- /.box-footer -->
            </div>

        </div>


        <div class="col-md-9">

            @foreach (var item in Model)
            {
                <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6  toppad">


                    <div class="panel panel-info">
                        <div class="panel-heading">
                            <p class="panel-title">
                               
                                

                                <a href="/PhotoGrapher/ClientDetails/@Html.DisplayFor(modelItem => item.FkClientID)">@item.Clients.Name</a>

                            </p>
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <!-- <div class="col-md-3 col-lg-3 " align="center">

                                      <img alt="User Pic" src="https://cdn4.iconfinder.com/data/icons/pretty_office_3/256/Accept-Male-User.png" class="img-circle img-responsive">
                                 </div> -->


                                <div class=" col-md-12 col-lg-12 col-xs-6 ">
                                    <table class="table table-user-information">
                                        <tbody>
                                            <tr>
                                                <td>Title</td>
                                                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                                            </tr>
                                            <tr>
                                                <td>Hire date:</td>
                                                <td>@Html.DisplayFor(modelItem => item.HireDate)</td>
                                            </tr>

                                            <tr>
                                                <td>Hire Time:</td>
                                                <td>@Html.DisplayFor(modelItem => item.HireTime)</td>
                                            </tr>


                                            <tr>
                                                <td>Payment</td>
                                                <td>@Html.DisplayFor(modelItem => item.payment)</td>
                                            </tr>


                                            <tr>
                                                <td>Description</td>
                                                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                                            </tr>

                                            <tr>
                                                <td>Address</td>
                                                <td>@Html.DisplayFor(modelItem => item.Address)</td>
                                            </tr>
                                            <tr>
                                                <td>Email</td>
                                                <td><a href="#">@Html.DisplayFor(modelItem => item.Email)</a></td>
                                            </tr>
                                            <tr>
                                                <td>Phone</td>
                                                <td>@Html.DisplayFor(modelItem => item.Phone)</td>


                                            </tr>

                                        </tbody>
                                    </table>

                                  @using (Html.BeginForm("AppliedPost", "PhotoGrapher", FormMethod.Post))

                                  {
                                      @*@Html.EditorFor(modelItem => item.PostId)
                                      @Html.EditorFor(modelItem => item.FkClientID*@

                                 <input type="hidden" name="PostId" value="@item.PostId"/>
                                <input type="hidden" name="FkClientID" value="@item.FkClientID" />


                                     <button class="btn btn-success">Apply This Job</button>

                                  }
                                </div>
                            </div>
                        </div>


                    </div>
                </div>

            }

        </div>




    </div>



</section>
