@model CoolCat.PhotoGrapherLancer.Core.Entities.Client.Client

@{
    ViewBag.Title = "ClientDetails";
    Layout = "~/Views/Shared/_Layout_PhotoGrapherPage.cshtml";
}


<section class="content-header">
    <h1>
        Client
        <small>Details</small>
    </h1>

</section>

<!-- Main content -->
<section class="content container-fluid">

    <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4 col-md-offset-4 toppad">


        <div class="panel panel-info">
            <div class="panel-heading">
                <p class="panel-title">
                   Client Profile




                </p>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-3 col-lg-3 col-md-offset-3" align="center">

                        <img alt="User Pic" src="~/Content/Component/dist/img/saha.jpg" class="" style="height: 134px; width:160;">
                    </div>


                    <div class=" col-md-12 col-lg-12 col-xs-6 ">
                        <table class="table table-user-information">
                            <tbody>
                                <tr>
                                    <td>Full Name :</td>
                                    <td>@Html.DisplayFor(model => model.Name)</td>
                                </tr>
                                <tr>
                                    <td>Email :</td>
                                    <td><a href="#">@Html.DisplayFor(model => model.Email)</a></td>
                                </tr>

                                <tr>
                                    <td>Phone :</td>
                                    <td>@Html.DisplayFor(model => model.Phone)</td>

                                </tr>


                                <tr>
                                    <td>Address :</td>
                                    <td>@Html.DisplayFor(model => model.Address)</td>

                                </tr>





                            </tbody>

                        </table>

                        @*<a href="/Client/Edit/@Html.DisplayFor(model => model.ClientId)" class="btn btn-info">Update Profile</a>*@


                    </div>
                </div>
            </div>


        </div>
    </div>


</section>
