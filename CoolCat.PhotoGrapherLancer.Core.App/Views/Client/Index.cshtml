@model CoolCat.PhotoGrapherLancer.Core.Service.ServiceViewModel.PhotoGrapherProfileViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout_ClientPage.cshtml";
}

  <!-- Full Width Column -->
<div class="content-wrapper">
    <div class="container-fluid">
        <!-- Content Header (Page header) -->
        <!-- Main content -->
        <section class="content">


            <div class="row">
                <div class="col-md-3">




                    <div class="info-box">
                        <span class="info-box-icon bg-aqua"><i class="fa fa-envelope-o"></i></span>

                        <div class="info-box-content">
                            <span class="info-box-text">Hire</span>
                            <span class="info-box-number">51</span>
                        </div>

                    </div>

                    <div class="info-box">
                        <span class="info-box-icon bg-orange"><i class="fa fa-envelope-o"></i></span>

                        <div class="info-box-content">
                            <span class="info-box-text">Post Job</span>
                            <span class="info-box-number">105</span>
                        </div>

                    </div>

                    <div class="info-box">
                        <span class="info-box-icon bg-blue"><i class="fa fa-envelope-o"></i></span>

                        <div class="info-box-content">
                            <span class="info-box-text">Interested</span>
                            <span class="info-box-number">2300</span>
                        </div>

                    </div>

                    <div class="info-box">
                        <span class="info-box-icon bg-green"><i class="fa fa-envelope-o"></i></span>

                        <div class="info-box-content">
                            <span class="info-box-text">Section</span>
                            <span class="info-box-number">Comming soon...</span>
                        </div>

                    </div>


                </div>
                <!-- /.box -->
                <!-- /.col mid post/image -->
                <div class="col-md-6">
                    

                    @foreach (var item in Model.Gallary)
                    {

                   

                    <div class="box box-widget">
                        <div class="box-header with-border">
                            <div class="user-block">
                                
                                <img class="img-circle" src="@Url.Content(item.ImagePath)" alt="User Image">
                                <span class="username"><a href="/Client/PhotoGrapherProfile/@item.Fk_PhotoGrapher_ID">@item.PhotoGrapher.FullName</a></span>
                                <span class="description">Shared publicly - @item.Date_time</span>
                            </div>
                            <!-- /.user-block -->
                            <!-- /.box-tools -->
                        </div>
                        <!-- /.box-header -->
                        <div class="box-body">
                            <img class="img-responsive pad" src="@Url.Content(item.ImagePath)" alt="Photo">

                            <p>@item.Caption</p>
                            <p>@item.Description</p>
                            @if (item.CameraUsed != null)
                            {

                                <p><b>Camera Used:</b>@item.CameraUsed</p>
                            }
                           
                            <button type="button" class="btn btn-default btn-xs"><i class="fa fa-thumbs-o-up"></i> Like</button>
                            <span class="pull-right text-muted">@item.Likes Likes</span>
                        </div>

                    </div>

                    }


                    <!-- /.col-md-6 end -->
                </div>


                <div class="col-md-3">
                    <!-- USERS LIST -->
                    <div class="box box-danger">
                        <div class="box-header with-border">
                            <h3 class="box-title">Latest PhotoGrapher</h3>


                        </div>
                        <!-- /.box-header -->
                        <div class="box-body no-padding">
                            <ul class="users-list clearfix">

                                @foreach (var item in Model.ProfilepictureList)
                                {

                                <li>
                                    <img src="@Url.Content(item.ImagePath)" alt="User Image" style="height:55px;width:68px;">
                                    <a class="users-list-name" href="/Client/PhotoGrapherProfile/@item.Fk_PhotoGrapher_ID">@item.Pht.FullName</a>
                                    <span class="users-list-date">Profile</span>
                                </li>
                                }
                           
                            </ul>
                            <!-- /.users-list -->
                        </div>
                        <!-- /.box-body -->
                        <div class="box-footer text-center">
                            <a href="/Client/PhotoGrapherList" class="uppercase">View All PhotoGrapher</a>
                        </div>
                        <!-- /.box-footer -->
                    </div>

                    <!-- end phographer need -->
                    <div class="box box-primary">
                        <div class="box-header with-border">
                            <h3 class="box-title">I Need  a PhotoGrapher</h3>

                            <div class="box-tools pull-right">
                                <button type="button" class="btn btn-box-tool" data-widget="collapse">
                                    <i class="fa fa-minus"></i>
                                </button>
                                <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
                            </div>
                        </div>
                        <!-- /.box-header -->
                        <div class="box-body">
                            <ul class="products-list product-list-in-box">

                                @foreach (var item in ViewBag.jobpost)
                                {

                                
                                <li class="item">
                                    <div class="product-img">
                                        <img src="~/Content/Component/dist/img/default-50x50.gif" alt="Product Image">
                                    </div>
                                    <div class="product-info">
                                        <a href="/Client/Postshow" class="product-title">
                                            @item.Title
                                            <span class="label label-warning pull-right">Details</span>
                                        </a>
                                        <span class="product-description">
                                            @item.payment
                                        </span>
                                    </div>
                                </li>
                             }  
                                
                               
                            </ul>
                        </div>
                        <!-- /.box-body -->
                        <div class="box-footer text-center">
                            <a href="/Client/Postshow" class="uppercase">View More</a>
                        </div>
                        <!-- /.box-footer -->
                    </div>

                    <!-- end phographer need -->
                    <!--/.box -->
                </div>


            </div>
            <!-- /.col row -->
        </section>
        <!-- /.content -->
    </div>
    <!-- /.container -->
</div>

